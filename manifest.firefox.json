{
  "manifest_version": 3,
  "name": "Kick VOD Downloader",
  "version": "1.4",
  "description": "Download Kick.com VODs directly as MP4 files with a single click. Fast, simple, and runs entirely in your browser.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "webRequest"
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://*.kick.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["mux.min.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kick VOD Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kickvoddownloader@example.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}